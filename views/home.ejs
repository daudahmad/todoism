<div class="page-header">
  <h1>Meeting Note Taker!</h1>
</div>

<form ng-submit="addNote()" style="margin-top:30px;">
  <h3>Add a new note</h3>

  <div class="form-group">
    <input type="text"
      class="form-control"
      placeholder="Title"
      ng-model="title"></input>
  </div>
  <div class="form-group">
    <textarea placeholder="Note Text" 
      class="form-control"
      rows="5"
      ng-model="noteText"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Add Note</button>
</form>

<hr/>
<h4>Existing Notes:</h4>

<div>
  <ol>  
    <span style="font-size:20px; margin-left:10px;">
      <li ng-repeat="note in notes">
        <!-- <span>
          {{note.title}}
        </span> -->
        <span>
          <a href="#/notes/{{$index}}">{{note.title}}</a>
        </span>
      </li>
      <!-- <span>
        {{note.noteText}}
      </span> -->
      </span>
  </ol>
</div>